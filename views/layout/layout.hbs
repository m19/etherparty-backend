<script type="text/javascript">
    $(document).ready(function () {
        //Basic Example
        $("#data-table-basic").bootgrid({
            css: {
                icon: 'md icon',
                iconColumns: 'md-view-module',
                iconDown: 'md-expand-more',
                iconRefresh: 'md-refresh',
                iconUp: 'md-expand-less'
            },
        });

        //Selection
        $("#data-table-selection").bootgrid({
            css: {
                icon: 'md icon',
                iconColumns: 'md-view-module',
                iconDown: 'md-expand-more',
                iconRefresh: 'md-refresh',
                iconUp: 'md-expand-less'
            },
            selection: true,
            multiSelect: true,
            rowSelect: true,
            keepSelection: true
        });

        //Command Buttons
        $("#data-table-command").bootgrid({
            css: {
                icon: 'md icon',
                iconColumns: 'md-view-module',
                iconDown: 'md-expand-more',
                iconRefresh: 'md-refresh',
                iconUp: 'md-expand-less'
            },
            formatters: {
                "commands": function (column, row) {
                    return "<a href=\"transaction-details.html\"><button type=\"button\"  class=\"btn btn-icon command-edit\" data-row-id=\"" + row.id + "\"><span class=\"md md-view-headline\"></span></button></a> ";
                }
            }
        });
    });
</script>
<script type="text/javascript">
    var handler = StripeCheckout.configure({
        key: "pk_test_m6zx7T9viXmI29CK8KVldLrm",
        //image: '/img/checkout/marketing/watsi.png',
        token: function(token) {
            $.post('/payment', {
                stripeToken: token.id,
                email: token.email,
                type: token.type,
            }, function(data) {
                $('.block-header').append('<div class="alert alert-success">Successfully updated the plan.</div>');
            }, 'json').fail(function(jqXHR){
                $('.block-header').append('<div class="alert alert-danger">Error updating the plan.</div>');
            });
        }
    });

    $( document ).on( "click", "a#pro-plan", function(e) {
        handler.open({
            name: "etherparty",
            description: "Etherparty Pro Plan",
            allowRememberMe: "false",
            amount: 25 * 100,
            bitcoin: true
        });
        e.preventDefault();
    });
</script>
